{% extends 'base.html.twig' %}

{% block title %}Calendrier des réservation{% endblock %}

{% block body %}

<section class="container">
<div class="row justify-content-center">
<div class="col-md-6">
    <h1>Calendrier des réservation</h1>
  {% if app.user %}
    <table class="table">

        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ calendar.id }}</td>
            </tr>
            <tr>
                <th>Date de la réservation</th>
                <td>{{ calendar.dateStart ? calendar.dateStart|date('d-m-Y') : '' }}</td>
            </tr>
        {#     <tr>
                <th>Date de la réservation</th>
                <td>{{ calendar.dateEnd ? calendar.dateEnd|date('d-m-Y') : '' }}</td>
            </tr>#}
             <tr>
                <th>Heure de la réservation</th>
                <td>{{ calendar.timeStart }}</td>
            </tr>
            <tr>
                <th>Heure de la réservation</th>
                <td>{{ calendar.timeEnd }}</td>
            </tr>
            <tr>
                <th>Nombre de personne</th>
                <td>{{ calendar.nbOfPeople }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn3 form-group" href="{{ path('app_calendar_index') }}">Retour</a>

    <a class="btn btn2 form-group" href="{{ path('app_calendar_edit', {'id': calendar.id}) }}">Modifier</a>

    {{ include('calendar/_delete_form.html.twig') }}
    {% endif %}
</div>
</div>
</section>
{% endblock %}
