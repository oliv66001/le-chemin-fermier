{% extends 'base.html.twig' %}

{% block title %}Modifier une réservation{% endblock %}

{% block body %}
<section class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">Modifier une réservation</h1>
            {% if app.user %}   (is_granted('{{app.user}}' == '{{app.user.id}}')) {
                {{ include('calendar/_form.html.twig', {'button_label': 'Update'}) }}
                  <a href="{{ path('app_calendar_index') }}">Retour</a>

                {{ include('calendar/_delete_form.html.twig') }}
            } {% else %} {
                <div class="alert alert-danger" role="alert">
                    Vous ne pouvez pas modifier cette réservation
                </div>}
            

  
        </div>
    </div>
</section>
  

  
{% endblock %}
