{% extends 'base.html.twig' %}

{% block title %}Nos entrées{% endblock %}



{% block body %}
<div class="container-fluid">
	<div class="row">
		<div class="col-12">
			<h1 class="text-center mt-10">Nos entrées</h1>
		</div>
	</div>
	<div>
		{% for categorie in categories %}
			<h2 class="text-center mt-8">
				{{ categorie.name == 'Entree' | upper }}
			</h2>
			<ul>
				{% for entree in categorie.entree %}
					<section class="container-fluid">
						<div class="row">
							<div class="col-12">
								<ol>
									<h5>Nom :</br>
								</h5>
								<h3 class="text-center mt-10">
									{{ entree.name }}</h3>
							</ol>
							<ol>
								<h5>Description :</br>
							</h5>
							<h5>{{ entree.description }}</h5>
						</ol>
						<ol>
							<h5>Prix :</br>
						</h5>
						<h3 class="text-center">
							{{ entree.price }}€</h3>
					</ol>
				</div>
			</div>
		</section>

	{% endfor %}
</ul>{% endfor %}</div>
{% endblock %}
