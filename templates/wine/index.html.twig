{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<ul>
					{% for categorie in categories %}
						{% if categorie.slug == "Vins" %}
							<img src={{ categorie.imageUrl }} alt="{{ categorie.name }}"/>
						{% endif %}
					{% endfor %}
					<h1 class="text-center mt-10">Nos vins :</h1>
					{% for vin in vins %}
						<div class="col-12 mb-3">
							<section class="container">
								<div class="row align-items-center">
									<div class="col-3">
										<h5 class="text-center mt-2 mb-0">{{ vin.name }}</h5>
									</div>
									<div class="col-7">
										<h5 class="text-center mt-2 mb-0">Description : {{ vin.description }}</h5>
									</div>
									<div class="col-2">
										<h5 class="text-center mt-2 mb-0">Prix : {{ vin.price }}â‚¬</h5>
									</div>
								</div>
							</section>
						</div>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>
{% endblock %}
